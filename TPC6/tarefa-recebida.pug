extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Tarefa registada
            .w3-container
               table.w3-table-all
                    tr
                        th Nome
                        th Data de Registo
                        th Descricao
                        th Tipo
                        th Prazo 
                    tr
                        td= tarefa.nome
                        td= tarefa.dataRegisto
                        td= tarefa.descricao
                        td= tarefa.tipo
                        td= tarefa.prazo
                        
            .w3-container
                .w3-button
                    a(href="/") Voltar à página principal
                    
            footer.w3-container.w3-teal
                adress Gerado por To-Do App
