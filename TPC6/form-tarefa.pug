extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de uma tarefa
            .w3-container
                form.w3-container(action='/processaForm' method='POST')
                    label.w3-teal
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label.w3-teal
                        b Data de Registo
                    input.w3-input.w3-border.w3-light-grey(type='date' name='dataRegisto')
                    label.w3-teal
                        b Descricao
                    input.w3-input.w3-border.w3-light-grey(type='text' name='descricao')
                    label.w3-teal
                        b Tipo
                    

                    select.w3-select.w3-border.w3-light-grey(name='tipo' required)
                        option(value="" disabled select) Escolha a sua opção
                        option(value='Académico') Académico
                        option(value="Doméstico") Domestico
                        option(value="Outro") Outro

                    label.w3-teal
                        b Prazo
                    input.w3-input.w3-border.w3-light-grey(type='date' name='prazo')
                    input.w3-btn.w3-blue-gray(type='submit' value='Enviar tarefa')
            
            .w3-container
                .w3-button.w3-black.w3-border.w3-right
                    a(href="/") Página inicial
            
            footer.w3-container.w3-teal
                adress Gerado por To-Do App
