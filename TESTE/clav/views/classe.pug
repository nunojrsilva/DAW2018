extends layout
block content
  .w3-container
    .w3-card-4
        header.w3-container.w3-blue
            h1 CLAV: Classificação e Avaliação da Informação Pública
        .w3-container
            h2= classe.titulo
            h3= "Status : " + classe.status
            h4= "Descrição"
            p= classe.desc
            if descendencia.length
                h4 Descendência
                table.w3-table-all
                    tr
                        th Código
                        th Titulo
                    each c in descendencia
                        tr
                        td 
                            a(href= '/classe/'+ c.codigo)= c.codigo
                        td= c.titulo
        footer
            a(href="/") Página Inicial
    
