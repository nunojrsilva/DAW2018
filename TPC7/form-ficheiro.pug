extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de um ficheiro
            .w3-container
                form.w3-container(action='/processaForm' method='POST' enctype="multipart/form-data") 
                    label.w3-teal
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro')
                    label.w3-teal
                        b Descricao
                    input.w3-input.w3-border.w3-light-grey(type='text' name='desc')
                    input.w3-btn.w3-blue-gray(type='submit' value='Enviar')

    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Ficheiros disponíveis
            .w3-container
                table.w3-table
                    tr
                        th Ficheiro
                        th Descriçao
                    each ficheiro in ficheiros
                        tr
                            td
                                a(href=ficheiro.path)= ficheiro.nome
                            td=ficheiro.descricao



            footer.w3-container.w3-teal
                adress Gerado por FormApp
